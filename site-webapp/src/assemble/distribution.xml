<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>distribution</id>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${basedir}/src/assemble/dist/conf</directory>
			<includes>
				<include>*</include>
			</includes>
			<outputDirectory>/conf</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/assemble/dist/bin</directory>
			<includes>
				<include>*</include>
			</includes>
			<outputDirectory>/bin</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/assemble/dist/lib</directory>
			<includes>
				<include>*.jar</include>
			</includes>
			<outputDirectory>/lib</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/assemble/dist/docs</directory>
			<includes>
				<include>*</include>
			</includes>
			<outputDirectory>/docs</outputDirectory>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>${basedir}/src/assemble/dist/README.txt</source>
			<outputDirectory>/</outputDirectory>
			<filtered>true</filtered>
		</file>
		<file>
			<source>target/flag-oee-webapp.war</source>
			<outputDirectory>/webapp</outputDirectory>
			<filtered>false</filtered>
		</file>
		<file>
			<source>${basedir}/../flag-emp-exp-service/src/generated/resources/dbschema/FlagOEESite_ddl.sql</source>
			<outputDirectory>/sql</outputDirectory>
			<filtered>false</filtered>
		</file>
	</files>
</assembly>